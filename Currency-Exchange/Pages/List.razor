@page "/listcurrencies"

<GroupSection GroupSectionTitle="List of Available Currencies">
    <ChildContent>

        @if (Currencies == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <table class="table table-striped table-bordered text-center">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var currency in Currencies)
                    {
                        <tr>
                            <td>@currency.Name</td>
                            <td>@currency.Code</td>
                            <td><button class="btn btn-primary" @onclick="() => UpdateCurrency(currency)">Add</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </ChildContent>
</GroupSection>